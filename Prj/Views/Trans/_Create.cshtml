@model  TSSN.FTE.Insurance.DTO.CreateTransDto
<div class="container" id="horizontal-form">
    @using (Html.BeginForm("Create", "Trans", FormMethod.Post, new { @class = "form-horizontal createTrans" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(x => x.CompanyInsuranceId)
        @Html.HiddenFor(x => x.UserInsuranceId, new { @class = "userInsuranceId" })

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="PatientName" class="col-sm-4 control-label">نام و نام خانوادگی بیمار</label>

                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.PatientName, new { @class = "autoNames form-control", id = "PatientName" })
                        @Html.ValidationMessageFor(x => x.PatientName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="MainName" class="col-sm-4 control-label">نام و نام خانوادگی پرسنل</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.MainName, new { @readonly = "readonly", @class = "form-control bg-lightgray mainName", id = "MainName" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="PatientNationalCode" class="col-sm-4 control-label">کد ملی بیمار</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.PatientNationalCode, new { @readonly = "readonly", @class = "form-control bg-lightgray patientNationalCode farsi-digit" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="MainNationalCode" class="col-sm-4 control-label">کد ملی بیمه پرسنل</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.MainNationalCode, new { @readonly = "readonly", @class = "form-control bg-lightgray mainNationalCode farsi-digit" })
                    </div>
                </div>
            </div>
        </div>

        @*<div class="horizontal-space"></div>*@
        <hr style="margin-top:0" />

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="DateHazineh" class="col-sm-4 control-label">تاریخ هزینه</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.TransDate)
                        @Html.ValidationMessageFor(model => model.TransDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">نوع هزینه</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.TariffCategoryId, new SelectList(Model.TariffCategoryList, "Id", "Title"), "---انتخاب کنید---", new { @class = "form-control", @style = "padding-top:0" })
                        @Html.ValidationMessageFor(model => model.TariffCategoryId, "", new { @class = "text-danger" })


                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="MablHazineh" class="col-sm-4 control-label">مبلغ هزینه</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.TransAmount, new { @class = "farsi-digit form-control numbers" })
                        @Html.ValidationMessageFor(x => x.TransAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="OraghTedad" class="col-sm-4 control-label">تعداد اوراق ضمیمه(برگ)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.PageCount, new { @class = "farsi-digit form-control", maxlength = "5" })
                        @Html.ValidationMessageFor(x => x.PageCount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row form-footer">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary waves-effect waves-light"> <i class="fa fa-save m-r-5"></i> <span>ذخیره</span> </button>

                <button class="btn btn-default waves-effect" data-dismiss="modal"><i class="fa fa-ban m-r-5"></i> <span>انصراف</span></button>
            </div>
        </div>
    }
</div>
@Scripts.Render("~/bundles/jqueryval")

